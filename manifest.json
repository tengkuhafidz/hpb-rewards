{
  "manifest_version": 3,
  "name": "hpb-rewards",
  "description": "An extension to nudge healthier purchases with HPB",
  "version": "1.0.0",

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "all_frames": true,
      "js": ["dist/content.js"],
      "matches": [
        "https://www.lazada.sg/*",
        "https://shopee.sg/*",
        "https://www.fairprice.com.sg/*"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "public/popup.html",
    "default_icon": "public/img/hcs.png"
  },

  "permissions": ["storage", "activeTab", "tabs", "scripting", "webNavigation"],

  "options_ui": {
    "page": "public/settings.html",
    "open_in_tab": true
  }
}
